%html
  %head
    %title light|CHAIN
    = stylesheet_link_tag 'core'
    = javascript_include_tag :defaults
  %body

    #page_header
      %h1 light|CHAIN
      %h3 building the light, one link at a time
      
      #main_nav
        = link_to "Home", "/"
        = link_to "Scriptures", scriptures_url
        = link_to "About", about_url
        = link_to "Contact", contact_url
        - if logged_in?
          = link_to "Log Out", logout_url
        - else
          = link_to "Log In", login_url
          = link_to "Sign Up", signup_url

      .clear

    .hr
      %hr/

    #content
      - flash.each do |key, msg|
        = content_tag :div, msg, :id => key

      = yield

    .hr
      %hr/
    
    #footer 
      &copy; 2007 
      %a{:href => "http://gic.ashleafmedia.com"} garza innovations
      \-- All rights reserved
      #debug
        - if logged_in?
          = debug(current_user)