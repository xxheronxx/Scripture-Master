%h1 Listing links

%table
  %tr
    %th Refering Scripture
    %th Refered Scripture

  - for link in @links
  %tr
    %td=h link.refered_from.full_reference
    %td=h link.refered_to.full_reference
    %td= link_to 'Show', link
    %td= link_to 'Edit', edit_link_path(link)
    %td= link_to 'Destroy', link, :confirm => 'Are you sure?', :method => :delete

  - end

%br/

= link_to 'New link', new_link_path
